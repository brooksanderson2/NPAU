@page
@model NoPoorAfrica.Pages.Admin.Size.UpsertModel

@*Admin page allowing editing or updating of size options in the store*@

<form method="post" asp-action="Upsert">
    <div class="container">
        <div class="row px-2 mx-2 backgroundWhite border">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @if (Model.SizeObj.Id != 0)
            {
                <input type="hidden" asp-for="SizeObj.Id" />
            }

            <div class="col-12 px-3" style="border-bottom:1px solid #325d88">
                <h2 class="text-dark">@(Model.SizeObj.Id != 0 ? "Update" : "Create") Sizes</h2>
            </div>

            <div class="col-8 pt-3">
                <div class="form-group row">
                    <div class="col-3">
                        <label asp-for="SizeObj.Name"></label>
                    </div>
                    <div class="col-9">
                        <input class="form-control" asp-for="SizeObj.Name" />
                        <span class="text-danger" asp-validation-for="SizeObj.Name"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-9 offset-3">
                        <div class="row">
                            <div class="col-6">
                                <button type="submit" class="btn btn-warning form-control">@(Model.SizeObj.Id != 0 ? "Update" : "Create")</button>
                            </div>
                            <div class="col-6">
                                <a asp-page="./Index" class="btn btn-dark form-control">Back to List</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

