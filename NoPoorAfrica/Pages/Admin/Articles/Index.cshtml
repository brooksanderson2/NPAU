@page
@model NoPoorAfrica.Pages.Admin.Articles.IndexModel

<div class="container border backgroundWhite">
    <div class="row">
        <div class="col-6">
            <h2 class="text-dark">Modify or Create Articles</h2>
        </div>
    </div>
    <div class="row">
        <div class="col-12 text-right">
            <a asp-page="Upsert" class="btn btn-warning"><i class="fas fa-plus"></i>&nbsp;Create New</a>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <table id="DT_load" class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>
                            Image
                        </th>
                        <th>
                            Title
                        </th>
                        <th>
                            Publish Date
                        </th>
                        <th>
                            Last Updated
                        </th>
                        <th>
                            Options
                        </th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/js/adminArticles.js"></script>
}