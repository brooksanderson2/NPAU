@{
    @model NoPoorAfrica.Models.ViewModels.ArticlesTemplateViewModel
}

<div class="container">
    <div class="row">
        <h1>@Model.Title</h1>
    </div>
    <hr />
    <div class="col-11 row offset-1">
        @if (Model.ImageGallery.Count >= 3)
            @for (int i = 0; i < 3; i++)
            {
                <div>
                    <img class="rounded" src="@Model.ImageGallery.OrderBy(i => i.Position).ElementAt(i).FilePath" style="height:330px; width:310px;" />
                </div>
            }
        else
            @foreach (var item in Model.ImageGallery)
            {
                <div>
                    <img class="rounded" src="@item.FilePath" style="height:330px; width:310px;" />
                </div>
            }
    </div>
    <br />
    <div class="row">
        <div class="article-body col-11 offset-1 border rounded border-dark p-4 mb-5">
            @Html.Raw(@System.Net.WebUtility.HtmlDecode(Model.Body))
        </div>
    </div>
</div>