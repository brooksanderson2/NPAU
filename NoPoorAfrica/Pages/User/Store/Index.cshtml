<div>
    <h1 class="display-4 text-warning rounded m-2 p-2 center-screen">Store</h1>
</div>
<div>
    <h5 class="font-italic center-screen">Our products are 100% designed and sewn in Mozambique by women who have gone through the sewing courses.</h5>
</div>
<div class="row">

    <div class="col-6">
        <img class="storeHeaderImage rounded border border-dark" src="~/Images/Argentina-Sewing-.jpg" />
    </div>

    <div class="col-6">
        <img class="storeHeaderImage center-screen rounded border border-dark" src="~/Images/sewing.png" />
    </div>

</div>
<div>
    <div>&nbsp;</div>
</div>
<form asp-page="./Index" method="get">
    <div class="form-actions search-background container center-screen">
        <div class="row">
            <div class="col">
                <h5>Search by Item:&nbsp;&nbsp;&nbsp;</h5>
            </div>
            <div class="row">
                <p>
                    <input type="text" name="SearchString" value="@Model.CurrentFilter" />
                    <input type="submit" value="Search" class="btn btn-dark" />
                    <a asp-page="./Index">Clear Search</a>
                </p>
            </div>
        </div>

    </div>
</form>

<div class="container center-screen">
    <div class="row">
        <h5>Sort by:&nbsp;&nbsp; </h5>
        <div>
            <a asp-page="./Index" asp-route-sortOrder="@Model.NameSort"
               asp-route-currentFilter="@Model.CurrentFilter">
                @Html.DisplayNameFor(model => model.StoreItem[0].Name)
            </a>
        </div>
        <div>
            <p>&nbsp;&nbsp;&nbsp;|&nbsp;&nbsp;&nbsp;</p>
        </div>
        <div>
            <a asp-page="./Index" asp-route-sortOrder="@Model.PriceSort"
               asp-route-currentFilter="@Model.CurrentFilter">
                @Html.DisplayNameFor(model => model.StoreItem[0].Price)
            </a>
        </div>
    </div>
</div>


