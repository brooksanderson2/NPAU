@page
@model NoPoorAfrica.Pages.User.Store.DetailsModel
@{
}

<div class="">
    <form method="post">
        <input type="hidden" asp-for="ShoppingCartObj.StoreItemId" />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="container backgroundWhite">
            <div class="card">
                <div class="card-header bg-light text-light ml-0 row container">
                    <div class="col-12 col-md-6">
                        <h1 class="text-danger">@Model.ShoppingCartObj.StoreItem.Name</h1>
                    </div>
                    <div class="col-12 col-md-6 text-md-right">
                        <h1 class="text-muted">@((Model.ShoppingCartObj.StoreItem.Price).ToString("c"))</h1>
                    </div>
                </div>
                <div class="card-body">
                    <div class="container rounded p-2">
                        <div class="row">
                            <div class="col-12 col-lg-8">
                                <div class="row">

                                    <div class="col-12">

                                        <h3 class="text-success"></h3>
                                        <h3>StoreItem Description </h3>
                                        <span class="badge badge-info h3">@Model.ShoppingCartObj.StoreItem.Category.Name</span>
                                        <div class="border border-dark bg m-3 p-3 backgroundWhite">

                                            <p class="text-secondary">@Html.Raw(Model.ShoppingCartObj.StoreItem.Description)</p>

                                        </div>

                                        <div class="row">
                                            <div class="col border border-dark bg m-3 p-3 rounded">
                                                <div class="col"><label asp-for="ShoppingCartObj.Count" class="h3"></label></div>
                                                <div class="col">
                                                    <input type="number" min="1" value="1" asp-for="ShoppingCartObj.Count" class="form-control rounded" />
                                                    <span asp-validation-for="ShoppingCartObj.Count" class="text-danger"></span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-12 col-lg-4 p-1 text-center">

                                <img src="@Model.ShoppingCartObj.StoreItem.Image" style="width:100%" class="rounded" />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="row">
                        <div class="col-12 col-md-6 pb-1 ">
                            <a asp-page="Index" class="btn btn-success btn-square form-control btn-lg" style="height:50px;">Back to List</a>
                        </div>

                        @if (!User.Identity.IsAuthenticated)
                        {

            <div class="col-12 col-md-6 ">
                <button type="submit" disabled class="btn btn-primary btn-square form-control btn-lg" style="height:50px;">Login to Add to Cart</button>
            </div> }

                        else
                        {

            <div class="col-12 col-md-6 ">
                <button type="submit" class="btn btn-primary btn-square form-control btn-lg" style="height:50px;">Add to Cart</button>
            </div>}

                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}