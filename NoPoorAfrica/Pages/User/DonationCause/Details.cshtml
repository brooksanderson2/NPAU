@page
@model NoPoorAfrica.Pages.User.DonationCause.DetailsModel
@{
}

<div class="">
	<form method="post">
		<input type="hidden" asp-for="DonationCauseObj.Id" />
		<div asp-validation-summary="ModelOnly" class="text-danger"></div>
		<div class="container backgroundWhite">
			<div class="card">
				<div class="card-header bg-light text-light ml-0 row container">
					<div class="col-12 col-md-6">
						<h1 class="text-info text-black-50">@Model.DonationCauseObj.Title</h1>
					</div>
					<div class="col-12 col-md-6 text-md-right">
						<h1 class="text-muted"> @((Model.DonationCauseObj.FundingGoal).ToString("c"))</h1>
					</div>
				</div>
				<div class="card-body">
					<div class="container rounded p-2">
						<div class="row">
							<div class="col-12 col-lg-8">
								<div class="row">
                                    <div class="col-12">
                                        <span class="badge badge-warning h3">@Model.DonationCauseObj.Country</span>
                                        <h3 class="text-success"></h3>
                                        <p class="text-secondary">@Html.Raw(Model.DonationCauseObj.Description)</p>


                                        <p class="text-dark"> Start Date @Model.DonationCauseObj.FromDate   <br /> End Date @Model.DonationCauseObj.ToDate</p>
                                    </div>							
								</div>
							</div>
							<div class="col-12 col-lg-4 p-1 text-center">
								<img src="@Model.DonationCauseObj.Image" style="width:100%" class="rounded" />
							</div>
						</div>
					</div>
				</div>
				<div class="card-footer">
					<div class="row">
						<div class="col-12 col-md-4 pb-1 ">
							<a asp-page="Index" class="btn border-warning btn-square form-control btn-lg" style="height:50px;">Back to List</a>
						</div>
						<div class="col-12 col-md-4 ">
							<button asp-page-handler="Wire" type="submit" class="btn btn-warning btn-square form-control btn-lg" style="height:50px;">Donate With Wire</button>
						</div>
						<div class="col-12 col-md-4 ">
							<button asp-page-handler="Stripe" type="submit" class="btn btn-warning btn-square form-control btn-lg" style="height:50px;">Donate With Stripe</button>
						</div>
					</div>
				</div>
			</div>
		</div>
	</form>
</div>

@section Scripts{
	<partial name="_ValidationScriptsPartial" />
}