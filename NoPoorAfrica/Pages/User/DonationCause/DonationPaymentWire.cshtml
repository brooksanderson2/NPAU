@page
@model NoPoorAfrica.Pages.User.DonationCause.DonationPaymentWireModel
@using NoPoorAfrica.Utility
@using Microsoft.Extensions.Options
@inject IOptions<NoPoorAfrica.Utility.StripeSettings> Stripe


<form method="post">
	<div asp-validation-summary="ModelOnly" class="text-danger"></div>
	<br />
	<div class="backgroundWhiteBorder">
		<div class="container">
			<div class="card">
				<div class="card-header bg-dark text-light ml-0 row container">
					<div class="col-6">
						Donation to @ViewData["Title"]
					</div>
				</div>
				<div class="card-body">
					<div class="container rounded p-2">
						<div class="row">
							<div class="col-12 col-lg-6 pb-4">
								<div class="row">
									<h4 class="d-flex justify-content-between align-items-center mb-3">
										<span class="text-info text-black-50">Donation Details:</span>
									</h4>
								</div>
								<div class="row my-1">
									<div class="col-1">
										<input type="checkbox" id="anonCheckBox" onclick="return anonymous()" />
									</div>
									<div class="col-9">
										<label>Check if you want to make an anonymous donation</label>
									</div>
								</div>
								<div class="row my-1">
									<div class="col-3">
										<label>Name</label>
									</div>
									<div class="col-9">
										<input id="txtName" asp-for="@Model.PendingWire.DonorName" type="text" class="form-control" />
										<input id="txtNameHidden" asp-for="@Model.PendingWire.DonorName" type="text" class="form-control" disabled hidden />
										<span asp-validation-for="PendingWire.DonorName" class="text-danger"></span>
									</div>
								</div>
								<div class="row my-1">
									<div class="col-3">
										<label>Amount</label>
									</div>
									<div class="col-9">
										<input id="txtPhone" asp-for="@Model.PendingWire.DonationTotal" type="text" class="form-control" />
										<span asp-validation-for="PendingWire.DonationTotal" class="text-danger"></span>
									</div>
								</div>
								<div class="row my-1">
									<div class="col-3">
										<label>Email</label>
									</div>
									<div class="col-9">
										<input id="txtEmail" asp-for="@Model.PendingWire.Email" type="text" class="form-control" />
										<input id="txtEmailHidden" asp-for="@Model.PendingWire.Email" type="text" class="form-control" disabled hidden />
										<span asp-validation-for="PendingWire.Email" class="text-danger"></span>
									</div>
								</div>
								<div class="row my-1">
									<div class="col-3">
										<label>Comments</label>
									</div>
									<div class="col-9">
										<textarea asp-for="@Model.PendingWire.Comments" style="height:100px;" class="form-control"></textarea>
									</div>
								</div>
								<div class="row my-1">
									<div class="col-9">
										<label>I would like to receive updates about future causes</label>
									</div>
									<div class="col-1">
										<input id="followUpChckBx" asp-for="@Model.PendingWire.FollowUp" class="form-control" />
									</div>
								</div>

							</div>
							<div class="col-12 col-lg-6 ">
								<img src="@ViewData["Image"]" style="width:100%" class="rounded" />
							</div>
						</div>

					</div>

				</div>

				<div class="card-footer">
					<div class="row">
						<div class="col-12 col-md-6 pb-1 ">
							<a asp-page="Index" class="btn border-warning btn-square form-control">Cancel</a>
						</div>
						<div class="ccol-12 col-md-6 pb-1">
							<button type="submit" id="btnPlaceOrderWire" onclick="return validateInput()" value="Place Order Wire" class="btn btn-warning form-control">Donate With Wire Transfer</button>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</form>

@section Scripts{
	<script>
		function anonymous() {
			if (document.getElementById("txtName").disabled == true) {
				document.getElementById("txtName").value = "";
				document.getElementById("txtEmail").value = "";
				document.getElementById("txtName").disabled = false;
				document.getElementById("txtEmail").disabled = false;
				document.getElementById("txtEmailHidden").disabled = true;
				document.getElementById("txtNameHidden").disabled = true;
			}
			else if (document.getElementById("txtName").disabled == false) {
				document.getElementById("txtName").value = "Anonymous";
				document.getElementById("txtEmail").value = "Anonymous";
				document.getElementById("txtName").disabled = true;
				document.getElementById("txtEmail").disabled = true;
				document.getElementById("txtEmailHidden").disabled = false;
				document.getElementById("txtNameHidden").disabled = false;
				document.getElementById("txtNameHidden").value = "Anonymous";
				document.getElementById("txtEmailHidden").value = "Anonymous";
			}

			return true;
		}

		function validateInput() {
			var email = document.getElementById("txtEmail").value;
			var name = document.getElementById("txtName").value;
			var phone = document.getElementById("txtPhone").value;

			if (email.toString() == '') {
				swal("Error", "Please enter an email address", "error");
				return false;
			}
			if (name.toString() == '') {
				swal("Error", "Please enter a Name", "error");
				return false;
			}
			if (phone.toString() == '' || phone < 1.00) {
				swal("Error", "Please enter Donation Amount greater than $1", "error");
				return false;
			}
			return true;
		}
	</script>
}